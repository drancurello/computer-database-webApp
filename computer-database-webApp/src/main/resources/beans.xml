<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:component-scan base-package="com.excilys.computerDatabase" />
	
	<bean id="companyDAO" class="com.excilys.computerDatabase.dao.CompanyDAO">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="computerService" class="com.excilys.computerDatabase.service.ComputerService">
		<property name="computerDAO" ref="computerDAO" />
	</bean>
	
	<bean id="companyService" class="com.excilys.computerDatabase.service.CompanyService">
		<property name="companyDAO" ref="companyDAO" />
	</bean>

	<bean id="computerDAO" class="com.excilys.computerDatabase.dao.ComputerDAO">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
</beans>
